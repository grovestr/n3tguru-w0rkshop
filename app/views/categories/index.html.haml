%h1 Listing categories
%table.table
  %tr
    %th Name
    %th
    %th
    %th
  - categories.each do |category|
    %tr
      %td= category.name
      %td= link_to 'Show', category, class: 'btn btn-info btn-sm'
      - if signed_in? and current_user.admin?
        %td= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-sm'
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
      - else
        %td
        %td
%br

- if signed_in? and current_user.admin?
  = link_to 'New Category', new_category_path, class: 'btn btn-default'
