%h1= "#{@user.firstname} #{@user.lastname}"
= "email: #{@user.email}"
%br= "last login: #{@user.last_sign_in_at}"
%table{:class => "table table-striped table-bordered"}
  -if signed_in?
    %h3= "Last rewievs"
    - @user.reviews.limit(5).each do |rev|
      %tr
        %td= "rating: "
        %td= "#{rev.rating}"
        %td= "product id: "
        %td= "#{rev.product_id}"
        %td= "#{rev.created_at.to_formatted_s(:dd_mm_yy)}"
      %tr
        %td= "content: #{rev.content}"
        %td
        %td
        %td
        %td
%p= link_to 'Back', :back, class: 'btn btn-primary'